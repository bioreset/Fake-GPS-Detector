<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_third_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.thirdscreen.ThirdScreenFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="@color/design_default_color_error"
        android:gravity="center|top"
        android:lines="2"
        android:text="@string/celltower_error_panel"
        android:textColor="@color/cardview_light_background"
        android:textSize="11sp"
        tools:ignore="MissingConstraints,PrivateResource,SmallSp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/celltowerlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>